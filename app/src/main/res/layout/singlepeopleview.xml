<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="200dp"
    android:layout_width="200dp"
    android:layout_gravity="center"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="#ffffff"
        >


    <ImageView
        android:background="@drawable/demo_profile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:id="@+id/peopleprofilepic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Follow"
        android:radius="30dp"
        android:id="@+id/button2"
        android:layout_marginTop="3dp"
        android:background="@drawable/button"
        android:layout_below="@+id/peopleprofilepic"
        android:layout_centerHorizontal="true"
        android:textColor="#55ACEE"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:text="Carl Wien"
        android:id="@+id/PeopleName"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Software Engineer at Google"
        android:textSize="15dp"
        android:textColor="#666666"
        android:id="@+id/PeopleDesc"
        android:gravity="center"
        android:layout_below="@+id/PeopleName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</LinearLayout>
